require_relative "../../../../tools/of-includes"

desc "Build frontend to ../lib/HeadlessFrontend.so"
task :build, :of_dir do |t, args|
  sh "gcc -shared #{of_includes(args[:of_dir])} -undefined suppress -flat_namespace HeadlessFrontend.mm -o ../lib/HeadlessFrontend.so -framework Cocoa -framework OpenGL"
end